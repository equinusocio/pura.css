{
  "name": "pure.css",
  "version": "0.0.1",
  "description": "Pure.css is a customisable animations library based on keyframes and custom properties.",
  "main": "dist/pura.css",
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "babel-core": "6.26.3",
    "eslint": "5.3.0"
  },
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "devDependencies": {
    "autoprefixer": "9.1.0",
    "browser-sync": "2.24.6",
    "cssnano": "4.0.5",
    "cssnano-preset-advanced": "4.0.0",
    "npm-run-all": "4.1.3",
    "postcss-advanced-variables": "3.0.0",
    "postcss-cli": "6.0.0",
    "postcss-easy-import": "3.0.0",
    "postcss-load-config": "2.0.0",
    "postcss-preset-env": "5.3.0",
    "postcss-reporter": "5.0.0",
    "rimraf": "2.6.2",
    "stylelint": "9.4.0",
    "stylelint-config-standard": "18.2.0"
  },
  "scripts": {
    "css:dev": "yarn postcss lib/pura.pcss -c postcss.config.js -o dist/pura.css --verbose -w",
    "css:build": "yarn postcss lib/pura.pcss -c postcss.config.js -o dist/pura.css --verbose",
    "serve": "yarn browser-sync start --config './browser-sync.js'",
    "clean": "yarn rimraf 'dist/**/*'",
    "lint": "yarn stylelint src/**/*.pcss",
    "dev": "yarn npm-run-all --parallel css:dev serve",
    "build": "yarn npm-run-all clean lint css:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/equinusocio/pure.css.git"
  },
  "keywords": [
    "animation",
    "css",
    "custom properties",
    "customizable"
  ],
  "author": {
    "name": "Equinusocio",
    "url": "http://equinsuocha.io"
  },
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/equinusocio/pure.css/issues"
  },
  "homepage": "https://github.com/equinusocio/pure.css#readme"
}
