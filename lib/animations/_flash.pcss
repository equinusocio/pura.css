@keyframes pura-flash {
  0%,
  100% {
    opacity: 1;
  }

  50% {
    opacity: 0.6;
  }
}

[data-pura='flash'] {
  animation-name: pura-flash;
  animation-timing-function: var(--pura-timing-function, cubic-bezier(0.4, 0, 0.2, 1));
  animation-direction: alternate;
  animation-iteration-count: var(--pura-iteration-count, infinite);
}
