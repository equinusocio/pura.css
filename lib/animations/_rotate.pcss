@keyframes pura-rotate {
  0% {
    transform: rotate(calc(var(--pura-animation-turns, 1turn) * -1));
  }

  100% {
    transform: none;
  }
}

[data-pura='rotate'] {
  animation-name: pura-rotate;
  animation-direction: var(--pura-animation-direction, unset);
  animation-timing-function: var(--pura-timing-function, $standard-curve);
  animation-iteration-count: var(--pura-iteration-count, infinite);
}
